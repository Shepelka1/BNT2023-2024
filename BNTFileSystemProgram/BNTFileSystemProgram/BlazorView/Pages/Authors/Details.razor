@page "/authors/details/{Id}"
@using BussinessLayer;
@using ServiceLayer;
@inject AuthorManager authorManager;

<h3>Details</h3>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.AuthorName
        </dd>
    </dl>
</div>
<div>
    <a href="authors/edit/@Model.AuthorId">Edit</a> |
    <a href="authors">Back to List</a>
</div>


@code {

    [Parameter]
    public string Id { get; set; }

    Author Model = new Author();

    protected override async Task OnInitializedAsync()
    {
        Model = await authorManager.ReadAsync(Id, false, true);
    }

}
