@page "/tags/details/{Id}"
@using BussinessLayer;
@using ServiceLayer;
@inject TagManager tagManager;

<h3>Details</h3>

<div>
    <h4>Tag</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
    </dl>
</div>
<div>
    <a href="tags/edit/@Model.TagId">Edit</a> |
    <a href="tags">Back to List</a>
</div>


@code {

    [Parameter]
    public string Id { get; set; }

    Tag Model = new Tag();

    protected override async Task OnInitializedAsync()
    {
        Model = await tagManager.ReadAsync(Id, false, true);
    }

}
