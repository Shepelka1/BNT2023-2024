@page "/genres/details/{Id}"
@using BussinessLayer;
@using ServiceLayer;
@inject GenreManager genreManager;

<h3>Details</h3>

<div>
    <h4>Genre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
    </dl>
</div>
<div>
    <a href="genres/edit/@Model.GenreId">Edit</a> |
    <a href="genres">Back to List</a>
</div>


@code {

    [Parameter]
    public string Id { get; set; }

    Genre Model = new Genre();

    protected override async Task OnInitializedAsync()
    {
        Model = await genreManager.ReadAsync(Id, false, true);
    }

}
