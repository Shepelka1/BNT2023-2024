@model IEnumerable<BussinessLayer.Format>

@{
    ViewData["Title"] = "Formats";
}

<h1>Formats</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Extension)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Extension)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FormatId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FormatId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FormatId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
